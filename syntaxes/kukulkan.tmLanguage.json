{
	"scopeName": "source.kukulkan",
	"name": "Kukulkan",
	"fileTypes": [
		"kukulkan",
		"3k"
	],
	"patterns": [
		{
			"name": "keyword.control.kukulkan",
			"match": "(?<=[^\\w-]|^)(ManyToMany|ManyToOne|OneToMany|OneToOne|dto|entity|max|maxbytes|maxlength|min|minbytes|minlength|pattern|required)(?=[^\\w-]|$)"
		},
		{
			"name": "keyword.datatypes.kukulkan",
			"match": "(?<=[^\\w-]|^)(String|Integer|Long|BigDecimal|Float|Double|Boolean|LocalDate|ZonedDateTime|Blob|AnyBlob|ImageBlob|TextBlob|Instant)(?=[^\\w-]|$)"
		},
		{
			"name": "string.quoted.double.kukulkan",
			"begin": "\"",
			"end": "\""
		},
		{
			"name": "string.quoted.single.kukulkan",
			"begin": "'",
			"end": "'"
		},
		{
			"name": "comment.line.kukulkan",
			"match": "//.+"
		},
		{
			"name": "comment.block.kukulkan",
			"begin": "/\\*",
			"end": "\\*/"
		}
	]
}